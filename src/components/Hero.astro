---
import data from '../data/portfolio.json';
const { profile, heroSection } = data;
---
<section id="hero" class="hero">
  <div class="hero-orb"></div>
  <div class="hero-orb hero-orb--2"></div>
  <div class="container hero-grid">
    <div class="hero-content">
      <div class="hero-animate">
        <span class="hero-status">{profile.status}</span>
      </div>
      <h1 class="hero-heading hero-animate">{heroSection.heading}</h1>
      <p class="hero-sub hero-animate">{heroSection.subHeading}</p>
      <div class="hero-actions hero-animate">
        <a href="javascript:void(0)" class="btn-primary" data-section="projeler">
          {heroSection.ctaPrimary}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
        </a>
        <a href="javascript:void(0)" class="btn-secondary" data-section="iletisim">{heroSection.ctaSecondary}</a>
      </div>
      <div class="hero-socials hero-animate">
