<style>
  .wa-container {
    position: fixed;
    bottom: 24px;
    left: 24px;
    z-index: 200;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    font-family: 'Satoshi', system-ui, sans-serif;
  }

  .wa-panel {
    display: none;
    width: 320px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    animation: wa-slide-in 0.3s ease;
  }

  .wa-panel.is-open {
    display: block;
  }

  @keyframes wa-slide-in {
    from { opacity: 0; transform: translateY(12px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  .wa-header {
    background: #0f172a;
    padding: 24px;
    color: #fff;
    position: relative;
  }

  .wa-close {
    position: absolute;
    top: 16px;
    right: 16px;
    color: #94a3b8;
    transition: color 0.2s;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .wa-close:hover { color: #fff; }

  .wa-profile {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .wa-avatar-wrap {
    position: relative;
    flex-shrink: 0;
  }

  .wa-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    border: 2px solid #fff;
    object-fit: cover;
    background: #1e293b;
  }

  .wa-online {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 12px;
    height: 12px;
    background: #22c55e;
    border-radius: 50%;
    border: 2px solid #0f172a;
  }

  .wa-name {
    font-weight: 700;
    font-size: 1.1rem;
    line-height: 1.3;
    color: #fff;
  }

  .wa-status-text {
    font-size: 0.75rem;
    color: #94a3b8;
    margin-top: 4px;
  }

  .wa-chat {
    background: #e5ddd5;
    padding: 24px;
    min-height: 240px;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 8px;
    overflow-y: auto;
  }

  .wa-chat-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.06;
    background-image: url('https://user-images.githubusercontent.com/15075759/28719144-86dc0f70-73b1-11e7-911d-60d70fcded21.png');
    background-size: cover;
    pointer-events: none;
  }

  .wa-chat-time {
    text-align: center;
    position: relative;
    z-index: 1;
    margin-bottom: 8px;
    display: none;
  }

  .wa-chat-time span {
    background: rgba(255,255,255,0.7);
    padding: 4px 12px;
    border-radius: 8px;
    font-size: 0.7rem;
    color: #64748b;
    font-weight: 500;
  }

  .wa-chat-time.show {
    display: block;
  }

  /* Typing indicator */
  .wa-typing {
    display: none;
    position: relative;
    z-index: 1;
    align-self: flex-start;
  }

  .wa-typing.show {
    display: block;
  }

  .typing-dots {
    background: #fff;
    padding: 12px 18px;
    border-radius: 0 16px 16px 16px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.08);
    display: flex;
    gap: 4px;
    align-items: center;
  }

  .typing-dots span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #94a3b8;
    animation: typing-bounce 1.4s infinite ease-in-out;
  }

  .typing-dots span:nth-child(1) { animation-delay: 0s; }
  .typing-dots span:nth-child(2) { animation-delay: 0.2s; }
  .typing-dots span:nth-child(3) { animation-delay: 0.4s; }

  @keyframes typing-bounce {
    0%, 60%, 100% { transform: translateY(0); opacity: 0.4; }
    30% { transform: translateY(-6px); opacity: 1; }
  }

  /* Message bubble - hidden initially */
  .wa-bubble {
    background: #fff;
    padding: 12px 14px;
    border-radius: 0 12px 12px 12px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.08);
    font-size: 0.9rem;
    color: #1e293b;
    position: relative;
    z-index: 1;
    max-width: 90%;
    line-height: 1.5;
    align-self: flex-start;
    display: none;
    animation: bubble-pop 0.3s ease;
  }

  .wa-bubble.show {
    display: block;
  }

  @keyframes bubble-pop {
    from { opacity: 0; transform: scale(0.9) translateY(8px); }
    to { opacity: 1; transform: scale(1) translateY(0); }
  }

  .wa-sender {
    font-weight: 700;
    font-size: 0.8rem;
    color: #ea580c;
    margin-bottom: 6px;
  }

  .wa-bubble-body {
    margin-top: 6px;
  }

  .wa-msg-time {
    font-size: 0.65rem;
    color: #94a3b8;
    float: right;
    margin-top: 4px;
    margin-left: 8px;
  }

  .wa-footer {
    padding: 16px;
    background: #fff;
    border-top: 1px solid #f1f5f9;
  }

  .wa-start-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    padding: 14px;
    background: #25D366;
    color: #fff;
    font-weight: 700;
    font-size: 0.95rem;
    border-radius: 100px;
    transition: background 0.2s, box-shadow 0.2s;
    text-decoration: none;
  }

  .wa-start-btn:hover {
    background: #20bd5a;
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.3);
  }

  .wa-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    background: #25D366;
    color: #fff;
    padding: 14px 22px;
    border-radius: 100px;
    border: none;
    cursor: pointer;
    font-weight: 700;
    font-size: 0.95rem;
    font-family: inherit;
    box-shadow: 0 8px 30px rgba(37, 211, 102, 0.3);
    transition: transform 0.3s ease, background 0.2s;
    position: relative;
  }

  .wa-toggle:hover {
    transform: scale(1.05);
    background: #20bd5a;
  }

  .wa-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    width: 16px;
    height: 16px;
  }

  .wa-badge-ping {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: #ef4444;
    opacity: 0.75;
    animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  .wa-badge-dot {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: #ef4444;
    border: 2px solid #fff;
  }

  @keyframes ping {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  @media (max-width: 480px) {
    .wa-container {
      bottom: 16px;
      left: 16px;
      right: 16px;
    }
    .wa-panel {
      width: 100%;
    }
    .wa-toggle-text {
      display: none;
    }
  }
</style>
