---
import data from "../data/portfolio.json";
const { contact, profile } = data;
---

<section id="iletisim">
  <div class="container">
    <div class="contact-wrapper" data-reveal>
      <div class="contact-content">
        <span class="section-label">Ä°letiÅŸim</span>
        <h2 class="section-title">{contact.ctaMessage}</h2>
        <p class="contact-email-label">{contact.emailTitle}</p>
        <a href={`mailto:${profile.email}`} class="contact-email"
          >{profile.email}</a
        >
        <div class="contact-socials">
          <a
            href={profile.socials.github}
            target="_blank"
            rel="noopener"
            aria-label="GitHub">GitHub</a
          >
          <a
            href={profile.socials.linkedin}
            target="_blank"
            rel="noopener"
            aria-label="LinkedIn">LinkedIn</a
          >
          <a
            href={profile.socials.twitter}
            target="_blank"
            rel="noopener"
            aria-label="Twitter">Twitter</a
          >
          <a
            href={profile.socials.instagram}
            target="_blank"
            rel="noopener"
            aria-label="Instagram">Instagram</a
          >
        </div>
      </div>
      <div class="contact-form-wrapper">
        <form
          class="contact-form"
          id="contactForm"
          action="https://formspree.io/f/xvzblqoe"
          method="POST"
        >
          <input type="hidden" name="_subject" value="Yeni Ä°letiÅŸim MesajÄ±" />
          <input type="hidden" name="_captcha" value="false" />

          <input type="text" name="name" placeholder="AdÄ±nÄ±z" required />

          <input
            type="email"
            name="email"
            placeholder="E-posta adresiniz"
            required
            autocomplete="off"
          />

          <textarea name="message" rows="5" placeholder="MesajÄ±nÄ±z..." required
          ></textarea>

          <button type="submit" class="btn-primary">
            GÃ¶nder
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </button>
        </form>
        <div id="formPopup" class="form-popup">
          Mesaj baÅŸarÄ±yla gÃ¶nderildi ðŸš€
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #iletisim {
    padding-bottom: 40px;
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 20px;
    padding: 60px;
  }

  .contact-email-label {
    font-size: 0.85rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    margin-top: 24px;
    margin-bottom: 8px;
  }

  .contact-email {
    font-family: "Clash Display", sans-serif;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--accent);
    transition: var(--transition);
    display: inline-block;
    word-break: break-all;
  }

  .contact-email:hover {
    color: var(--accent-hover);
  }

  .contact-socials {
    display: flex;
    gap: 20px;
    margin-top: 32px;
  }

  .contact-socials a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-muted);
    transition: var(--transition);
    position: relative;
  }

  .contact-socials a:hover {
    color: var(--accent);
  }

  .contact-socials a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1.5px;
    background: var(--accent);
    transition: width 0.3s ease;
  }

  .contact-socials a:hover::after {
    width: 100%;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 14px 18px;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text-primary);
    font-family: "Satoshi", sans-serif;
    font-size: 0.95rem;
    transition: var(--transition);
    outline: none;
  }

  .contact-form input::placeholder,
  .contact-form textarea::placeholder {
    color: var(--text-muted);
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px var(--accent-dim);
  }

  .contact-form textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-form .btn-primary {
    align-self: flex-start;
    width: auto;
  }

  /* form popup notification */
  .form-popup {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: #1f2937;
    color: #fff;
    padding: 14px 22px;
    border-radius: 8px;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease;
    z-index: 9999;
  }

  .form-popup.show {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 32px;
    }
  }
</style>

<script>
  const form = document.getElementById("contactForm");
  const popup = document.getElementById("formPopup");

  if (form instanceof HTMLFormElement && popup instanceof HTMLElement) {
    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      const formData = new FormData(form);

      const response = await fetch(form.action, {
        method: "POST",
        body: formData,
        headers: {
          Accept: "application/json",
        },
      });

      if (response.ok) {
        popup.classList.add("show");
        form.reset();

        setTimeout(() => {
          popup.classList.remove("show");
        }, 3000);
      } else {
        alert("Bir hata oluÅŸtu. LÃ¼tfen tekrar deneyin.");
      }
    });
  }
</script>
