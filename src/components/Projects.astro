---
import data from '../data/portfolio.json';
const { projects } = data;
---
<section id="projeler">
  <div class="container">
    <div class="projects-header" data-reveal>
      <span class="section-label">Projeler</span>
      <h2 class="section-title">Seçili Çalışmalar</h2>
      <p class="section-subtitle">Geliştirdiğim ve katkıda bulunduğum projelerden öne çıkanlar.</p>
    </div>
    <div class="projects-bento">
      {projects.map((project, i) => (
        <div class={`project-card ${project.featured ? 'featured' : ''}`} data-reveal style={`--delay: ${i * 0.12}s`}>
          <div class="project-image">
            {project.liveUrl ? (
              <a href={project.liveUrl} target="_blank" rel="noopener noreferrer">
                <img src={project.image} alt={project.title} loading="lazy" onerror="this.style.display='none'" />
              </a>
            ) : (
              <img src={project.image} alt={project.title} loading="lazy" onerror="this.style.display='none'" />
            )}
            <div class="project-image-fallback"></div>
          </div>
          <div class="project-body">
            <h3 class="project-title">{project.title}</h3>
            <p class="project-desc">{project.longDescription}</p>
            <div class="project-stack">
              {project.techStack.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
            <div class="project-links">
              {project.liveUrl && (
                <a href={project.liveUrl} target="_blank" rel="noopener" class="project-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                  Canlı
                </a>
              )}
              {project.repoUrl && (
                <a href={project.repoUrl} target="_blank" rel="noopener" class="project-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  Kaynak Kod
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .projects-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .projects-header .section-subtitle {
    margin-inline: auto;
  }

  .projects-bento {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .project-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    transition: var(--transition);
    perspective: 1000px;
  }

  .project-card.featured {
    grid-column: span 2;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
  }

  .project-card:not(.featured) .project-image {
    height: 200px;
  }

  .project-card:hover {
    border-color: rgba(232, 197, 71, 0.2);
    box-shadow: 0 12px 40px var(--accent-dim);
    transform: translateY(-6px);
  }

  .project-image {
    position: relative;
    overflow: hidden;
    min-height: 220px;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-image-fallback {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-secondary) 50%, rgba(232, 197, 71, 0.05) 100%);
    z-index: 0;
  }

  .project-image img {
    position: relative;
    z-index: 1;
  }

  .project-body {
    padding: 28px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .project-title {
    font-size: 1.25rem;
  }

  .project-desc {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .project-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 4px;
  }

  .tech-tag {
    padding: 4px 12px;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 100px;
    background: var(--bg-tertiary);
    color: var(--text-secondary);
    border: 1px solid var(--border);
  }

  .project-links {
    display: flex;
    gap: 16px;
    margin-top: 8px;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    transition: var(--transition);
  }

  .project-link:hover {
    color: var(--accent-hover);
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .projects-bento {
      grid-template-columns: 1fr;
    }
    .project-card.featured {
      grid-column: span 1;
      grid-template-columns: 1fr;
    }
  }
</style>
